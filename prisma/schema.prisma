}
model User {
  id      String     @id @unique 
  name    String
  profilepic String
  posts   Post[]
  Phonenumber Int 
  Collaborations String[]
}


model Post {
  id         String       @id @unique 
  title      String
  content    String[] 
  links   Link[]
  authorId   String
  author     User       @relation(fields: [authorId], references: [id])
  categories String
  Collaborators String[]
}

model Link {
  id           String  @id @unique // Optional: Add an ID for the link
  url          String
  watchedtill  Int
  post         Post?   @relation(fields: [postId], references: [id])
  postId       String?
}
