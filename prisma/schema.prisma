generator client {
  provider = "prisma-client-js"
}
model User {
  id      String     @id @unique 
  name    String
  profilepic String
  posts   Post[]
  Phonenumber Int 
  Collaborations String[]
}
model Content {
  id                 Int       @id @default(autoincrement()) 
  textContent        String
  markedAsImportant  Boolean
  post               Post         @relation(fields: [postId], references: [id])
  postId             String
}

model Post {
  id         String       @id @unique 
  title      String
  content    Content[]
  links      String[]
  videos     Video[]
  authorId   String
  author     User       @relation(fields: [authorId], references: [id])
  categories String
  Collaborators String[]
}

model Video {
  id   Int   @id  @default(autoincrement()) 
  link String
  lastwatched Int @default(0)
  post  Post      @relation(fields: [postId],references: [id])
  postId String
}



